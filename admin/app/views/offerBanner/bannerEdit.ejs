<% layout('layout/afterlogin') -%>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">

    <!-- Navbar -->
    <% include ../layout/navbar %>

    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <% include ../layout/sidebar %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Offer Banner <small>edit</small></h1>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <section class="content">
        <div class="container-fluid">
          <!-- SELECT2 EXAMPLE -->
          <div class="card card-default">
            <!-- /.card-header -->
            <form role="form" id="addOffer" method="post" action="/offerBanner/editOfferSubmit"
              enctype="multipart/form-data">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Choose Banner <b>(Width: 441 px, Height: 256 px)</b></label>
                      <% if (banner.image != ''){%>
                      <a href="<%= `${serverImagePath}${banner.image}` %>" target="_blank" class=""><i
                          class="fas fa-eye"></i></a>
                      <% } %>
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile" name="banner">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                      </div>
                    </div>
                    <input type="hidden" name="bannerId" value="<%= bannerId %>">
                    <!-- /.form-group -->
                    <div class="form-group">
                      <label>From Date</label>



                      <div class="input-group date fromDate" data-provide="datepicker">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="far fa-calendar-alt"></i>
                          </span>
                        </div>
                        <input type="text" class="form-control" name="fromDate" value="<%= dataObj.fromDate %>">
                        <div class="input-group-addon">
                          <span class="glyphicon glyphicon-th">

                          </span>
                        </div>
                      </div>

                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                      <label>Offer Text <small>(This text will show in the banner)</small></label>
                      <input type="text" id="offerText" class="form-control" value="<%= dataObj.offerText %>"
                        name="offerText">
                    </div>
                  </div>
                  <!-- /.col -->
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Select Dropdown Type</label>
                      <select class="select2" data-placeholder="Select Dropdown Type" style="width: 100%;"
                        name="dropdownType" id="dropdownType">
                        <% var promoSel = '';
                        var resSel = ''
                         if(banner.bannerType == 'promocode') { 
                          promoSel = 'selected';
                         } else {
                          resSel = 'selected';
                         }
                         %>
                        <option value="restaurant" <%= resSel%>>Restaurant</option>
                        <option value="promocode" <%= promoSel%>>Promo Code</option>

                      </select>
                    </div>
                    <div class="form-group chngRes">
                      <label>Select Restaurant</label>
                        <select multiple data-placeholder="Select Restaurant"
                          style="width: 100%;" name="restaurant" id="chngRes">
                        <% if (vendors.length > 0){%>
                        <%  for (let vendor of vendors){ 
                          var vendrIdArr = banner.vendorId;
                          if (Array.isArray(vendrIdArr)) { 
                           
                            var vendrId = (vendor._id).toString();
                             if(vendrIdArr.includes(vendrId)) {
                              var selectedOption = 'selected';
                            } else {
                              var selectedOption = '';
                            }
                             } else if(vendrIdArr == '') {
                              var selectedOption = '';
                             } else {
                             if(vendrIdArr == vendor._id) {
                              var selectedOption = 'selected';
                             } else {
                              var selectedOption = '';
                             }
                             } %>
                        <option value="<%= vendor._id %>" <%= selectedOption %>><%= vendor.restaurantName %></option>
                        <% } } %>
                      </select>
                    </div>
                    <div class="form-group promocode">
                      <label>Select Promo Code</label>
                      <select class="select2" data-placeholder="Select Promo Code" style="width: 100%;" name="promocode"
                        id="promocode">

                        <% if (promoCodeArr.length > 0){%>
                        <%  for (let promoCode of promoCodeArr){ %>
                        <% var promoCodeSel = '';
                           if(banner.promoCodeId == promoCode._id) {
                            promoCodeSel = 'selected';
                            } %>
                        <option value="<%= promoCode._id %>" <%= promoCodeSel%>><%= promoCode.promoCode %></option>
                        <% } } %>
                      </select>
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                      <label>To Date</label>
                      <div class="input-group date toDate" data-provide="datepicker">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="far fa-calendar-alt"></i>
                          </span>
                        </div>
                        <input type="text" class="form-control" name="toDate" value="<%= dataObj.toDate %>">
                        <div class="input-group-addon">
                          <span class="glyphicon glyphicon-th">

                          </span>
                        </div>
                      </div>

                    </div>
                  </div>
                  <!-- /.col -->
                </div>
                <!-- /.row -->

              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>

            </form>
          </div>
          <!--/.col (left) -->
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <% include ../layout/footer %>

  </div>
  <!-- ./wrapper -->


  <!-- jQuery -->
  <script src="../../plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <!-- Select2 -->
  <script src="../../plugins/select2/js/select2.full.min.js"></script>
  <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../js/bootstrap-notify.min.js"></script>

  <script src="../../js/jquery.multiselect.js"></script>

  <!-- InputMask -->
  <script src="../../plugins/moment/moment.min.js"></script>
  <script src="../../plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>

  <!-- bs-custom-file-input -->
  <script src="../../plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
  <!-- jquery-validation -->
  <script src="../../plugins/jquery-validation/jquery.validate.min.js"></script>
  <script src="../../plugins/jquery-validation/additional-methods.min.js"></script>
  <!-- date-range-picker -->
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
  <!-- AdminLTE App -->
  <script src="../../js/adminlte.min.js"></script>

  <script type="text/javascript">


    $(function () {


      $(".fromDate").datepicker({
        format: 'dd/mm/yyyy',
        autoclose: true,
        showOtherMonths: true,
        selectOtherMonths: true,
        autoclose: true,
        changeMonth: true,
        changeYear: true,
        orientation: "bottom left"
      }).on('changeDate', function (selected) {
        var startDate = new Date(selected.date.valueOf());
        $('.toDate').datepicker('setStartDate', startDate);
      }).on('clearDate', function (selected) {
        $('.toDate').datepicker('setStartDate', null);
      });

      $(".toDate").datepicker({
        format: 'dd/mm/yyyy',
        autoclose: true,
        showOtherMonths: true,
        selectOtherMonths: true,
        autoclose: true,
        changeMonth: true,
        changeYear: true,
        orientation: "bottom left"
      }).on('changeDate', function (selected) {
        var endDate = new Date(selected.date.valueOf());
        $('.fromDate').datepicker('setEndDate', endDate);
      }).on('clearDate', function (selected) {
        $('.fromDate').datepicker('setEndDate', null);
      });



      bsCustomFileInput.init();

      //Initialize Select2 Elements
      $('.select2').select2()
      // Initialize form validation on the registration form.
      // It has the name attribute "registration"
      $("#addOffer").validate({
        // Specify validation rules
        rules: {
          banner: {
            extension: "jpg|jpeg|png|ico|bmp"
          },
          fromDate: {
            required: true
          },
          toDate: {
            required: true
          }
        },
        // Specify validation error messages
        messages: {
          banner: {
            extension: "Please upload file in these format only (jpg, jpeg, png, ico, bmp)."
          },
          fromDate: {
            required: 'Please choose from date'
          },
          toDate: {
            required: 'Please choose to date'
          }
        },
        errorElement: 'span',
        errorPlacement: function (error, element) {
          error.addClass('invalid-feedback');
          element.closest('.form-group').append(error);
        },
        highlight: function (element, errorClass, validClass) {
          $(element).addClass('is-invalid');
        },
        unhighlight: function (element, errorClass, validClass) {
          $(element).removeClass('is-invalid');
        },
        // Make sure the form is submitted to the destination defined
        // in the "action" attribute of the form when valid
        submitHandler: function (form) {
          form.submit();
        }
      });
    });
  

    $("body").on("change", "#dropdownType", function () {
      var dropdownType = $('#dropdownType').val();

      if (dropdownType == 'restaurant') {
        $('.chngRes').show();
        $('.promocode').hide();
      } else {
        $('.promocode').show();
        $('.chngRes').hide();
      }

    })

    $('select[multiple]').multiselect({
      columns  : 2,
      search   : true,
      selectAll: true,
      texts    : {
          placeholder: 'Select Restaurant',
          search     : 'Search Restaurant'
      }
    });
  </script>
  <% if(banner.bannerType == 'promocode'){ %>
  <script>
    $(document).ready(function () {
      $('.chngRes').hide();
      $('.promocode').show();
    });
  </script>
  <%  } else { %>
  <script>
    $(document).ready(function () {
      $('.chngRes').show();
      $('.promocode').hide();
    });
  </script>
  <%  }  %>

  <% if(messages.msgLog){ %>
  <script>
    $(function () {
      $.notify({
        // options
        message: '<%= messages.msgLog %>'
      }, {
        // settings
        type: '<%= messages.msgType %>',
        z_index: 1035,
        spacing: 10,
        animate: {
          enter: 'animated fadeInDown',
          exit: 'animated fadeOutUp'
        }
      });
    });
  </script>
  <% } %>

</body>