      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Edit Profile</h1>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <!-- left column -->
            <div class="col-md-6">
              <!-- jquery validation -->
              <div class="card card-primary">

                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" id="editProfile" method="post" action="/user/editProfileSubmit">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">First Name</label>
                      <input type="text" name="firstName" class="form-control" id="firstName"
                        placeholder="Enter first name" value="<%- responseObj.firstName %>">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Last Name</label>
                      <input type="text" name="lastName" class="form-control" id="lastName"
                        placeholder="Enter last name" value="<%- responseObj.lastName %>">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" name="email" <%= adminType%> class="form-control" id="exampleInputEmail1"
                        placeholder="Enter email" value="<%- responseObj.email %>">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Phone</label>
                      <input type="text" name="phone" <%= adminType%> class="form-control" id="phone"
                        placeholder="Enter phone" value="<%- responseObj.phone %>">
                    </div>
                  </div>
                  <input type="hidden" name="adminId" value="<%- responseObj._id %>">
                  <!-- /.card-body -->
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
            <!--/.col (left) -->
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <% include ../layout/footer %>

